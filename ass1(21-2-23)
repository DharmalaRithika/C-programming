#include<stdio.h>
#include<conio.h>
#include<string.h>
void main()
{
char str[15];
int i,l,f=0;
printf("enter any string");
gets(str);
l=strlen(str);
for(i=0;i<l-1;i++)
{
if(str[i]==str[l-i-1])
f=f+1;
}
if(f==i)
printf("given string is palindrom");
else
printf("given string is not palindrome");
getch();
